{
  "vars": {
    "Drive": "D:",
    "TempDir": "${Drive}/temp/VSCodeInstall",

    "SoftRepo": "D:/Soft/IDE/VSCode",
    "VSCodeZipFile": "VSCode_v1.9.9.zip",
    "FullProjectZipFile": "AlgoritmosAFondo_FULL_v2.7.27.zip",

    "VSCodeHome": "${Drive}/vscode",
    "VSCodeWorkspace": "${VSCodeHome}/Workspace"
  },

  "steps": [
    { "action": "MkDir", "path": "${TempDir}" },

    { "action": "Copy", "from": "${SoftRepo}/${VSCodeZipFile}", "to": "${TempDir}/${VSCodeZipFile}", "progress": true },
    { "action": "Copy", "from": "${SoftRepo}/${FullProjectZipFile}", "to": "${TempDir}/${FullProjectZipFile}", "progress": true },

    { "action": "Remove", "path": "${VSCodeHome}" },

    { "action": "Unzip", "from": "${TempDir}/${VSCodeZipFile}", "to": "${Drive}/", "progress": true },
    { "action": "Unzip", "from": "${TempDir}/${FullProjectZipFile}", "to": "${VSCodeWorkspace}", "progress": true },

    { "action": "Remove", "path": "${TempDir}" },

    { "action": "Exec", "command": "${VSCodeHome}/RunVSCode.bat" }
  ]
}

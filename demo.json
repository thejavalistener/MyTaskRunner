{
  "vars": {
    "drive": "D:",
    "baseDir": "${vars:drive}/temp/DemoScript",
    "downloadDir": "${vars:baseDir}/download",
    "zipFile": "${vars:baseDir}/sample_${time:now:format:yyyyMMdd-HHmm}.zip",
    "unzipDir": "${vars:baseDir}/unzipped"
  },
  "steps": [
    { "action": "MkDir", "path": "${vars:baseDir}" },
    { "action": "MkDir", "path": "${vars:downloadDir}" },

    {
      "action": "Download",
      "url": "https://github.com/githubtraining/hellogitworld/archive/refs/heads/master.zip",
      "to": "${vars:downloadDir}/original.zip",
      "showProgress": true,
      "stopScriptOnError": true
    },

    {
      "action": "Zip",
      "from": "${vars:downloadDir}",
      "to": "${vars:zipFile}",
      "showProgress": true,
      "stopScriptOnError": true
    },

    {
      "action": "Remove",
      "path": "${vars:baseDir}/noExiste",
      "stopScriptOnError": false
    },

    {
      "action": "Unzip",
      "from": "${vars:zipFile}",
      "to": "${vars:unzipDir}",
      "showProgress": true,
      "stopScriptOnError": true
    },

    {
      "action": "Remove",
      "path": "${vars:downloadDir}",
      "stopScriptOnError": true
    }
  ]
}
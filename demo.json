{
  "vars": {
    "drive": "D:",
    "baseDir": "${var:get:drive}/temp/DemoScript",
    "downloadDir": "${var:get:baseDir}/download",
    "zipFile": "${var:get:baseDir}/sample_${time:now:yyyyMMdd-HHmm}.zip",
    "unzipDir": "${var:get:baseDir}/unzipped"
  },
  "steps": [
    { "action": "MkDir", "path": "${var:get:baseDir}" },
    { "action": "MkDir", "path": "${var:get:downloadDir}" },

    {
      "action": "Download",
      "url": "https://github.com/githubtraining/hellogitworld/archive/refs/heads/master.zip",
      "to": "${var:get:downloadDir}/original.zip",
      "showProgress": true,
      "stopScriptOnError": true
    },

    {
      "action": "Zip",
      "from": "${var:get:downloadDir}",
      "to": "${var:get:zipFile}",
      "showProgress": true,
      "stopScriptOnError": true
    },

    {
      "action": "Remove",
      "path": "${var:get:baseDir}/noExiste",
      "stopScriptOnError": false
    },

    {
      "action": "Unzip",
      "from": "${var:get:zipFile}",
      "to": "${var:get:unzipDir}",
      "showProgress": true,
      "stopScriptOnError": true
    },

    {
      "action": "Remove",
      "path": "${var:get:downloadDir}",
      "stopScriptOnError": true
    }
  ]
}